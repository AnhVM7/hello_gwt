
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">

	<g:VerticalPanel ui:field="detailPanel">
		<g:Label text="User Detail" styleName="h4 mb-4 text-primary"/>

		<g:HorizontalPanel styleName="mb-2">
			<g:Label text="Full Name: " styleName="fw-bold me-2"/>
			<g:Label ui:field="fullNameLabel" />
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="mb-2">
			<g:Label text="Email: " styleName="fw-bold me-2"/>
			<g:Label ui:field="emailLabel" />
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="mb-2">
			<g:Label text="Age: " styleName="fw-bold me-2"/>
			<g:Label ui:field="ageLabel" />
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="mb-2">
			<g:Label text="Address: " styleName="fw-bold me-2"/>
			<g:Label ui:field="addressLabel" />
		</g:HorizontalPanel>

		<g:HorizontalPanel styleName="mb-4">
			<g:Label text="Gender: " styleName="fw-bold me-2"/>
			<g:Label ui:field="genderLabel" />
		</g:HorizontalPanel>
		
		<g:Button ui:field="backButton" text="Back" />
	</g:VerticalPanel>
</ui:UiBinder>